@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-color: #e6f7ff; /* Light grayish-blue background */
    }

    .jumbotron {
        background-color: #343a40; /* Dark background color for the jumbotron */
        color: #ffffff; /* White text color for the jumbotron */
    }

    .card {
        background-color: #ffffff; /* White background color for cards */
        color: #212529; /* Dark text color for cards */
    }

    .card-img-top {
        border-bottom: 1px solid #dee2e6; /* Border color for card images */
    }

    .btn-primary {
        background-color: #dc3545; /* Red color for primary buttons */
        border-color: #dc3545; /* Border color for primary buttons */
    }

    .btn-secondary {
        background-color: #6c757d; /* Gray color for secondary buttons */
        border-color: #6c757d; /* Border color for secondary buttons */
    }
</style>

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="display-4">Run Groops</h1>
        <p class="lead">Discover the joy of running together. Join our running groups and explore new paths with fellow enthusiasts.</p>
        <p>
            <a href="#" class="btn btn-primary my-2">Get Started</a>
            <a href="#" class="btn btn-secondary my-2">Learn More</a>
        </p>
    </div>
</section>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="https://wmimg.azureedge.net/public/img/marathons/prague-half-marathon-2/bDMIG1_prague-half-marathon-2.jpg?c=1637675071" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">Join our vibrant running community and share your passion for fitness. Connect with like-minded individuals and explore new routes together.</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-primary">View</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Join</button>
                        </div>
                        <small class="text-muted">Starts in 5 days</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="https://wmimg.azureedge.net/public/img/marathons/medio-maraton-de-madrid/bONDiq_medio-maraton-de-madrid.jpg?c=1666778133" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">Challenge yourself with our weekly running challenges. Set new personal records, earn badges, and celebrate your achievements with the community.</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-primary">Explore</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Challenge</button>
                        </div>
                        <small class="text-muted">Ongoing</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="https://wmimg.azureedge.net/public/img/marathons/barcelona-marathon/bQeK2t_barcelona-marathon.jpg?c=1685634208" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">Stay motivated with our expert-curated playlists. Enjoy the perfect beats for your run and elevate your workout experience.</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-primary">Listen</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Discover</button>
                        </div>
                        <small class="text-muted">Updated daily</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
